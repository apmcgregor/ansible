[Unit]
Description=Minecraft Server
After=network.target

[Service]
User={{ mc_user }}
Nice=1
KillMode=none
SuccessExitStatus=0 1
ProtectHome=true
ProtectSystem=full
WorkingDirectory={{ mc_dir }}
ExecStart=/usr/bin/java -Xmx{{ mc_memory }} -Xms{{ mc_memory }} -jar server.jar nogui
ExecStop=/bin/kill -SIGINT $MAINPID
Restart=on-failure

[Install]
WantedBy=multi-user.target

